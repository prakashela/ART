@model ArtWebApp.Areas.ArtMVCGPO.ViewModal.SalesDoModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ArtMVC/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<form action="" method="post" enctype="multipart/form-data">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">


        <div class="row">
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("SDO #", new { @class = "control-label col-md-2" });
                </div>
                <div class="col-md-6">
                    @Html.DropDownList("SalesDO_PK", Model.SDOList, htmlAttributes: new { @class = "chosen-select form-control" })
                    @Html.HiddenFor(model => Model.SalesDO_PK, new { htmlAttributes = new { @class = "form-control" } })








                </div>
                <div class="col-md-4">
                    <input type="submit" value="Show" name="action:Show" />


                    <div>

                    </div>



                </div>

            </div>

        </div>

        <div class="top-buffer"></div>

        


        <div class="top-buffer"></div>
        <div class="row">
            <table class="table table-bordered table-striped table-responsive">
                <tr>
                    <th>
                        Uploadid

                    </th>
                    <th>
                        Mrn_PK

                    </th>
                    <th>
                        URL

                    </th>
                    <th>
                        Mrn Type

                    </th>
                    <th>
                        File  Name

                    </th>
                    <th>
                        AddedBy

                    </th>
                    <th>
                        AddedDate

                    </th>
                    <th></th>
                    <th></th>
                </tr>


                @if (Model.MrnFileUploads != null)
                {


                    foreach (var item in Model.MrnFileUploads)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FileUploadID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mrn_PK)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StringLength)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MrnType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Filename)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AddedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AddedDate)
                            </td>
                            <td>
                                @Html.ActionLink("Download", "Download", new { id = item.FileUploadID })

                            </td>
                            <td>
                                @if (item.AddedBy != null)
                                {

                                    if (item.AddedBy.Trim() == Session["Username"].ToString().Trim())
                                    {

                                        Html.ActionLink("Delete", "Delete", new { id = item.FileUploadID });
                                    }
                                }


                            </td>
                        </tr>
                    }







                }

            </table>

        </div>

        <div class="top-buffer"></div>




    </div>

 
</form>

