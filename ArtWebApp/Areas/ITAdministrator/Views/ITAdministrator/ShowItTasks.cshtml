
@{
    ViewBag.Title = "ShowItTasks";
    Layout = "~/Areas/ArtMVC/Views/Shared/_Layout.cshtml";
}

<h2>ShowItTasks</h2>


<div>


    <div class="row">
        <div class="col-md-4">
            <h2>Laysheet Data Offline</h2>
            <p>
              This Utility is used to download a specifi laysheet data required for transfering to AtcWorld ofline in excel format
            </p>
            <p><a class="btn btn-default"href="@Url.Action("ApproveLaysheet", "ApproveLaysheet",new { area = "ArtMVC" })">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Create Sample type</h2>
            <p>In this Section You will Create sample Type</p>
            <p><a class="btn btn-default" href="@Url.Action("Index", "SampleTypes")">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Receive Request</h2>
            <p>Here You will receive Pending Cutting Ticket</p>
            <p><a class="btn btn-default" href="@Url.Action("Create", "SamCutAssignmentMasters")">Learn more &raquo;</a></p>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4">
            <h2>Assign Master</h2>
            <p>
                You will Assign the master against Recieived Cutting ticket
            </p>
            <p><a class="btn btn-default" href="@Url.Action("AssignRequest", "SamCutAssignmentMasters")">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Update Pattern Completed </h2>
            <p>In this Section You will enter the  Daily Pattern Completion </p>
            @*<p><a class="btn btn-default" href="@Url.Action("Index", "Planning/Planning")">Learn more &raquo;</a></p>*@
            <p><a class="btn btn-default" href="@Url.Action("ShowPendingPatternCompleted", "SamCutAssignmentMasters")">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Update Daily Cutting </h2>
            <p>In this Section You will enter the  Daily Cutting output</p>
            @*<p><a class="btn btn-default" href="@Url.Action("Index", "Planning/Planning")">Learn more &raquo;</a></p>*@
            <p><a class="btn btn-default" href="@Url.Action("Index", "Cutting",new { area = "Cutting" })">Learn more &raquo;</a></p>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4">
            <h2>Update Daily Sewing</h2>
            <p>In this Section You will enter the  Daily Sewing output</p>
            <p><a class="btn btn-default" href="@Url.Action("ShowPendingToSew", "Sewing",new { area = "Cutting" })">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Update Daily Delivery</h2>
            <p>Update Daily Delivery status of Cutting ticket</p>
            <p><a class="btn btn-default" href="@Url.Action("ShowPendingDelivery", "Delivery",new { area = "Cutting" })">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Update Cutting Ticket Status</h2>
            <p>Here You will receive Pending Cutting Ticket</p>
            <p><a class="btn btn-default" href="@Url.Action("Index", "SamCutAssignmentMasters")">Learn more &raquo;</a></p>
        </div>
    </div>
</div>

